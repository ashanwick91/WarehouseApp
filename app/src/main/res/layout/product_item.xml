<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/colorSecondary"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Product Image -->
        <ImageView
            android:id="@+id/imageViewProduct"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop" />

        <!-- Product Name -->
        <TextView
            android:id="@+id/textViewProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="4dp"
            android:text="Nike Air Max SC"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18sp" />

        <!-- Price -->
        <TextView
            android:id="@+id/textViewPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="8dp"
            android:text="$97.88"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:textStyle="bold" />


        <!-- Category -->
        <TextView
            android:id="@+id/textViewCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Men's Shoes"
            android:textColor="@color/gray"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/descriptionCustomer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:gravity="start"
            android:text="Comfortable sports shoes"
            android:textSize="14sp"
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="@color/gray" />


        <!-- Category and Quantity Controls -->
        <LinearLayout
            android:layout_width="367dp"
            android:layout_height="35dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:paddingLeft="240dp">

            <!-- Minus Button -->

            <!-- Quantity Text -->
            <ImageView
                android:id="@+id/imageViewMinus"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/circle_border_grey"
                android:contentDescription="Decrease quantity"
                android:padding="10dp"
                android:src="@drawable/minusicon" />

            <TextView
                android:id="@+id/textViewItemCount"
                android:layout_width="13dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="8dp"
                android:gravity="center"
                android:padding="2dp"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <!-- Plus Button -->
            <ImageView
                android:id="@+id/imageViewPlus"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:contentDescription="Increase quantity"
                android:padding="0dp"
                android:src="@drawable/baseline_add_circle_24" />
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
