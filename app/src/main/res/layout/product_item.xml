<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:strokeColor="@color/stroke_color"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Product Image -->
        <ImageView
            android:id="@+id/imageViewProduct"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="centerCrop" />

        <!-- Price -->
        <TextView
            android:id="@+id/textViewPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="$97.88"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="8dp" />

        <!-- Product Name -->
        <TextView
            android:id="@+id/textViewProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="Nike Air Max SC"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="4dp" />
        <!-- Category -->
        <TextView
            android:id="@+id/textViewCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Men's Shoes"
            android:textSize="14sp"
            android:textColor="@color/gray"
            android:gravity="center" />
        <TextView
            android:id="@+id/descriptionCustomer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Comfortable sports shoes"
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="?android:attr/textColorSecondary"
            android:layout_marginTop="16dp"
            android:gravity="start" />



        <!-- Category and Quantity Controls -->
        <LinearLayout
            android:layout_width="367dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:paddingLeft="240dp">

            <!-- Minus Button -->
            <ImageView
                android:id="@+id/imageViewMinus"
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:background="@drawable/circle_border_grey"
                android:contentDescription="Decrease quantity"
                android:padding="10dp"
                android:src="@drawable/minusicon" />

            <!-- Quantity Text -->
            <TextView
                android:id="@+id/textViewItemCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <!-- Plus Button -->
            <ImageView
                android:id="@+id/imageViewPlus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="Increase quantity"
                android:padding="0dp"
                android:src="@drawable/baseline_add_circle_24" />
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
