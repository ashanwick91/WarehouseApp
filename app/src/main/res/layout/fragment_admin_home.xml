<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.AdminHomeFragment">

    <!-- ScrollView to enable scrolling for the entire content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- ConstraintLayout wrapped inside ScrollView -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/adminBtnLogout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:text="@string/logout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Title -->

            <!-- Dropdown for Selecting Daily or Monthly -->
            <TextView
                android:id="@+id/tvFinancialReportTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Financial Report"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.358"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Spinner
                android:id="@+id/spinnerFilterType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvFinancialReportTitle" />

            <!-- Spinner for Selecting Month -->
            <Spinner
                android:id="@+id/spinnerFilterMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/spinnerFilterType" />

            <!-- Spinner for Selecting Year -->
            <Spinner
                android:id="@+id/spinnerFilterYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:visibility="gone"
                app:layout_constraintStart_toEndOf="@+id/spinnerFilterMonth"
                app:layout_constraintTop_toBottomOf="@+id/spinnerFilterType" />

            <!-- Button for Selecting Exact Date -->
            <Button
                android:id="@+id/btnFilterDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="Select Date"
                android:visibility="gone"
                app:layout_constraintStart_toEndOf="@+id/spinnerFilterYear"
                app:layout_constraintTop_toBottomOf="@+id/spinnerFilterType" />

            <!-- TextView to Display Selected Date -->
            <TextView
                android:id="@+id/tvSelectedDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:text="No date selected"
                android:visibility="gone"
                app:layout_constraintStart_toEndOf="@+id/btnFilterDate"
                app:layout_constraintTop_toBottomOf="@+id/spinnerFilterType" />

            <!-- Filter Button for Reports -->

            <!-- Pie Chart for Sales Percentage -->

            <Button
                android:id="@+id/adminBtnFilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="16dp"
                android:text="Filter Reports"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/spinnerFilterType"
                app:layout_constraintTop_toBottomOf="@+id/adminBtnLogout" />

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/pieChart"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_marginTop="32dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/adminBtnFilter" />

            <!-- ListView/RecyclerView for Detailed Sales Data -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvSalesData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:scrollbars="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pieChart"
                tools:listitem="@layout/item_sales_data" />

            <Button
                android:id="@+id/adminBtnClearFilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="6dp"
                android:text="Clear"
                app:layout_constraintEnd_toEndOf="@+id/adminBtnFilter"
                app:layout_constraintTop_toTopOf="@+id/adminBtnFilter" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</FrameLayout>